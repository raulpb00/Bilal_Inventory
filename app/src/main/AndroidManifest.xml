<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inventory">

    <application
        android:name=".InventoryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.DashBoardActivity" />
        <activity android:name=".ui.DependencyEditActivity" />
        <activity android:name=".ui.SectorEditActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.SettingsSelectorActivity" />
        <activity android:name=".ui.ProductActivity" />
        <activity android:name=".ui.DependencyListActivity" />
        <activity android:name=".ui.SectionListActivity" />
        <activity
            android:name=".ui.AboutActivity"
            android:theme="@style/AppTheme.MaterialAboutActivity" />
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ui.AccountPreferencesActivity"
            android:label="@string/title_activity_account_preferences" />
        <activity android:name=".ui.ProductListActivity"></activity>
    </application>

</manifest>